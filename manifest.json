{
    "name": "Reggie",
    "version": "1.1",
    "description": "WebReg tool",
    "manifest_version": 2,
    "icons":{

		"128":"128.png",
		"48":"48.png",
		"16":"16.png"

	},
    "browser_specific_settings": {
        "gecko": {
            "id": "reg@2011ysyb.com", 
            "strict_min_version": "42.0"
        }
    },
	"browser_action":{

		"default_icon":"16.png",
		"default_popup":"popup.html",
		"default_title":"Reggie - A WebReg Extension"

	},
    "options_ui": {
        "page": "options.html", 
        "browser_style": true,
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": ["https://sis.rutgers.edu/soc/?iframe=true*"],
            "js": ["jquery-3.3.1.min.js", "content.js"],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["background.js", "eventPage.js"]
    },
    "permissions": [
        "tabs",
        "https://sims.rutgers.edu/*",
        "storage"
    ],
    "web_accessible_resources": [
        "injector.js",
        "courses_injector.js",
        "options.html"
    ]
}
